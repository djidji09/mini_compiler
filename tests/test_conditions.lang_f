INT age, score, grade;
FLOAT average;
BOOL passed, excellent;

BEGIN
    age := 20;
    score := 85;
    average := 75.5;
    
    // Simple conditions
    IF (age >= 18) {
        passed := true;
    } ELSE {
        passed := false;
    }
    
    // Multiple conditions
    IF (score >= 90) {
        grade := 1;
    } ELSE IF (score >= 80) {
        grade := 2;
    } ELSE IF (score >= 70) {
        grade := 3;
    } ELSE {
        grade := 4;
    }
    
    // Complex conditions
    IF (score > 80 AND average > 70.0) {
        excellent := true;
    } ELSE {
        excellent := false;
    }
    
    // Equality tests
    IF (age == 20) {
        score := score + 5;
    }
    
    IF (average <> 0.0) {
        score := score + 10;
    }
END